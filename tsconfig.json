{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@/components/*": ["components/*"],
      "@/content/*": ["content/*"],
      "@/layouts/*": ["layouts/*"],
      "@/pages/*": ["pages/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/data/*": ["data/*"]
    },
    "types": ["@astrojs/image/client"]
  },
  "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
