---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.
import "../styles/globals.scss";
import SectionContainer from "@/components/SectionContainer.astro";
import SEO from "@/components/seo/SEO.astro";
import { Icon } from "astro-icon";
import { SOCIALS } from "@config";

const currentYear = new Date().getFullYear();

const {
  class: className,
  title,
  description,
  keywords,
  url,
  twitterhandle,
  image
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      keywords={keywords}
      url={url}
      image={image}
    />
  </head>
  <body>
    <main class={className}>
      <slot />
    </main>

    <SectionContainer class="mt-32">
      <footer class="py-12 bg-neutral-50">
        <div class="wrap-sm mx-auto px-8 grid gap-8">
          <div class="footer-credits text-neutral-500">
            <div
              class="footer-socials font-medium flex gap-6 md:gap-10 max-w-md text-xl md:text-3xl lg:text-2xl leading-10 tracking-tighter"
            >
              {
                SOCIALS.filter((social) => social.active).map((social) => (
                  <a
                    href={social.href}
                    class="relative hover:underline hover:-top-0.5 hover:text-skin-accent hover:text-black focus-visible:p-1 flex items-center"
                    target="_blank"
                    title={social.title}
                  >
                    <Icon name={social.icon} class="w-10 h-10 inline" />
                  </a>
                ))
              }
            </div>
          </div>
          <span
            class="text-neutral-500 text-md flex flex-wrap gap-4 md:gap-0 md:justify-between"
          >
            <span>Copyright Â© {currentYear} ðŸš€ JeongminSung</span>
            <a class="" target="_blank" href="https://www.chrstnl.com/">
              Made by chrstnl.
            </a>
          </span>
        </div>
      </footer>
    </SectionContainer>
  </body>
</html>
